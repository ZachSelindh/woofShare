<div id="confirmation">
    {{> header }}
    <div class="container mt-5">
        <section class="confirmation" style="min-height: 400px">
            <h1>Reservation Details</h1>
            <div class="confirmation__selection">
                <div class="row mt-5">
                    <div class="col-2 confirmation__selection__img">
                        <img src="images/dog-2.jpg" />
                    </div>
                    <div class="col-5">
                        <h3>Woofy</h3>
                        <hr />
                        <p class="text-small">Lorem ipsum dolor sit, amet consectetur adipisicing elit. Voluptas odio
                            debitis accusantium
                            repellat alias laboriosam deserunt? Numquam, eaque qui, totam dignissimos deserunt vero esse
                            ad magnam, doloribus distinctio error ratione?</p>
                    </div>
                    <div class="col-5">
                        <form>
                            <div class="form__group">
                                <label for="pickUpDate" class="form__label"><span class="color-red">* </span>Pick Up
                                    Date</label>
                                <input class="form__input" id="pickUpDate" type="text" placeholder="M/D/YYYY"
                                    required />
                            </div>
                            <div class="form__group">
                                <label for="returnDate" class="form__label"><span class="color-red">* </span>Return
                                    Date</label>
                                <input class="form__input" id="returnDate" type="text" placeholder="M/D/YYYY" required
                                    disabled />
                            </div>
                            <div class="form__group">
                                <input type="checkbox" id="tos" />
                                <label for="tos" class="text-small">I agree to WoofShare's <a class="color-primary"
                                        href="#!">Terms of Service</a></label>
                                <br>
                                <span class="text-tiny color-red" id="niceTry"></span>
                            </div>
                            <button id="confirm" class="btn btn-theme-secondary btn-lg" disabled>Confirm</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
<script src="js/datepicker.js"></script>
{{> footer }}