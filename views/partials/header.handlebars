<!-- Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="color-primary modal-title bold" id="loginModalLabel">User Login</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-center">
        <button id="btnGoogleLogin" class="btn btn-theme-red btn-lg m-5"><i class="fab fa-google pr-3"></i>Login with
          Google</button>
        <div class="text-left m-5">
          <p><span class="color-red-dark bold">Note:</span> We are currently in beta testing. As such, we are only
            providing signup/login authentication via Google. If
            you do not wish to sign up/in with Google, please check back with us periodically. We will be adding additional
            login options in the future.</p>
        </div>
      </div>
    </div>
  </div>
</div>
