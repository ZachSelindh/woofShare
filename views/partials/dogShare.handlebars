<div id="dogShare">
    {{> header }}
    <div class="container" style="min-height: 400px">
        <div class="row">
            <div class="col-12">
                <section class="dogShare">
                    <h1 class="my-5 ml-3">Provide Additional details</h1>
                    <!--form action="#!" class="form form__signUp" !-->
                    <form id="loginForm" class="form form__signUp">

                        <div class="form__group">
                            <input id="name" type="text" class="form__input" placeholder="Username" required>
                            <label for="name" class="form__label">Username</label>
                        </div>
                        <div class="form__group">
                            <input id="search_term" type="text" class="form__input" placeholder="Address" required>
                            <label for="search_term" class="form__label">Address</label>
                        </div>
                        {{!--   INSERT INTO dogShare(name, photoUrl, size, breed, age, profile, available, card_color,createdAt,updatedAt); --}}
                        <form>

                            <div class="form-group">
                                {{!-- dog name --}}
                                <label for="dogNameFormControlInput1">Please enter your dog's name</label>
                                <input type="dogName" class="form-control" id="dogShareDogName" placeholder="">
                            </div>

                            <div class="form-group">
                                {{!-- dog photo --}}
                                <label for="dogPhotoFormControlInput1">Please enter a photo (URL) of your dog</label>
                                <input type="dogPhoto" class="form-control" id="dogShareDogPhoto" placeholder="">
                            </div>

                            <div class="form-group">
                                {{!-- dog size (small, med, large) --}}
                                <label for="dogSizeFormControlSelect1">Select your dog's size</label>
                                <select class="form-control" id="dogShareDogPhotoFormControlSelect1">
                                    <option>Small</option>
                                    <option>Medium</option>
                                    <option>Large</option>
                                </select>
                            </div>

                            <div class="form-group">
                                {{!-- dog breed --}}
                                <label for="dogBreedFormControlInput1">Please select your dog's Breed</label>
                                <input type="dogBreed" class="form-control" id="dogShareDogBreed" placeholder="">
                            </div>

                            <div class="form-group">
                                {{!-- dog age (puppy, adult, senior) --}}
                                <label for="dogAgeFormControlSelect1">Dog's Age Range</label>
                                <select class="form-control" id="dogShareDogAgeFormControlSelect1">
                                    <option>Puppy</option>
                                    <option>Adult</option>
                                    <option>Senior</option>
                                </select>
                            </div>

                            <div class="form-group">
                                {{!-- dog profile --}}
                                <label for="dogShareDogProfileFormControlTextarea1">Please tell us about your
                                    dog.</label>
                                <textarea class="form-control" id="dogShareDogProfileFormControlTextarea1"
                                    rows="5"></textarea>
                            </div>

                            <div class="form-group">
                                {{!-- dog availability --}}
                                <label for="dogAvailabilitydFormControlInput1">Please provide the first date your dog is
                                    available to share with others</label>
                                <input type="dogAvailability" class="form-control" id="dogShareDogAvailability"
                                    placeholder="">
                            </div>
                        </form>
                        {{!-- submit button --}}
                        <div class="form__group">
                            <button id="signUpSubmit" class="btn btn-theme-primary ml-10">Submit</button>
                            {{!-- <span class="mx-3 signUp__why text-small color-primary">Why do I have to sign up with Google?</span> --}}
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

